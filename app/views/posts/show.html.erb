<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
	<p> 
		<strong>Commenter:</strong> <%= comment.commenter %>
	</p>
	<p> 
		<strong>Comment:</strong> <%= comment.body %>
	</p>
	<p>
		<%= link_to 'Destroy Comment', [@post, comment],ï¿¼method: :delete, data: { confirm: 'Are you sure?' } %>
		
	</p>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
	<p>
	  <%= f.label :commenter %><br>
      <%= f.text_field :commenter %>
    </p>
    <p>
      <%= f.label :email %><br>
      <%= f.text_field :email %>
	</p>
    <p>
	  <%= f.label :comment %><br>
	  <%= f.text_area :body %> </p>
	<p>
	  <%= f.submit %>
	</p>
<% end %>

